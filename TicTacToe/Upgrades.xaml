<Window x:Class="TicTacToe.Upgrades"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Upgrades" Height="450" Width="800" Background="AliceBlue">
    <Grid>
        <Button HorizontalAlignment="Center" Margin="0, 10, 0, 0" Height="80" Width="350" FontWeight="SemiBold" VerticalAlignment="Top" Background="DarkSeaGreen" Foreground="Black" Content="+1 Click" FontSize="30" Click="Upgrade1"/>
        <Button HorizontalAlignment="Center" Height="80" Width="350" VerticalAlignment="Center" FontWeight="SemiBold" Background="Goldenrod" Foreground="Black" Content="+10 Click" FontSize="30" Click="Upgrade2"/>
        <Button HorizontalAlignment="Center" Margin="0, 0, 0, 10" Height="80" FontWeight="SemiBold" Width="350" VerticalAlignment="Bottom" Background="Firebrick" Foreground="Black" Content="x2 Click" FontSize="30" Click="Upgrade3"/>
        <Button HorizontalAlignment="Right" Margin="0, 0, 10, 10" Height="60" FontWeight="SemiBold" Width="200" VerticalAlignment="Bottom" Background="DarkRed" Foreground="Black" Click="what"/>
        <Button HorizontalAlignment="Left" Margin="10" Height="60" Width="150" FontWeight="Bold" VerticalAlignment="Top" Background="Red" Content="Back" FontSize="20" Click="GoBack"/>
        <TextBlock VerticalAlignment="Top" Margin="0,65,0,0" Width="80" Text="Cost: 100 clicks"/>
        <TextBlock VerticalAlignment="Center" Margin="0,50,0,0" Width="88" Text="Cost: 1000 clicks"/>
        <TextBlock VerticalAlignment="Bottom" Margin="0,0,0,17" Width="98"  Text="Cost: 10000 clicks"/>
        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,17" Width="120"  Text="Cost: 666666 clicks"/>
    </Grid>
</Window>
