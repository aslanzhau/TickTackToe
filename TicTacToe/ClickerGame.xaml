<Window x:Class="TicTacToe.ClickerGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Clicker" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="AliceBlue">
    <Grid>
        <Button Height="60" Width="200" Background="SeaGreen" Foreground="Lime" Content="Click me!" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Click="ButtonBase_OnClick" Name="Button1"/>
        <Button Height="40" Width="100" Background="Gold" Foreground="Black" Content="Upgrades" Margin="0,200,0,0" FontSize="15" Click="ButtonShopClick" FontWeight="SemiBold" Name="Button2"/>
        <TextBlock HorizontalAlignment="Center" Text="Clicks: 0" Height="100" FontSize="15" Name="Counter" FontWeight="SemiBold"/>
        <TextBlock VerticalAlignment="Bottom" Margin="0,0,0,17" FontSize="15" Width="150" FontWeight="SemiBold" Foreground="DarkRed" Text="get 666666 clicks"/>
    </Grid>
</Window>
